
<%- include('../partials/head')%>

<%- include('../partials/navbar')%>


<div class="container">

    <div class="my-5">

        <div class="bg-white m-5 p-3 border border-danger rounded">
            <h1>Add a new Formula 1 team</h1>
    
            <!-- <div style="text-align: center; margin: 20px;" >
                <img src="https://source.unsplash.com/400x300/?racecar" alt="">
            </div> -->
            

            <form class="m-3" action="/f1teams" method="POST">
                <div class="form-group">
                    <label for="name">Enter team name:</label>
                    <input type="text" class="form-control form-control-sm" id="name" name="name" placeholder="name">
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="sponsor">Sponsor:</label>
                        <input type="text" class="form-control form-control-sm" id="sponsor" name="sponsor" placeholder="sponsor">
                    </div>
                    <div class="form-group col-6">
                        <label for="chassis">Chassis:</label>
                        <input type="text" class="form-control form-control-sm" id="chassis" name="chassis" placeholder="chassis">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="ranking">Ranking:</label>
                        <input type="text" class="form-control form-control-sm" id="ranking" name="ranking" placeholder="ranking">
                    </div>
                    <div class="form-group col-6">
                        <label for="engine">Engine:</label>
                        <input type="text" class="form-control form-control-sm" id="engine" name="engine" placeholder="engine">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="tires">Tires:</label>
                        <input type="text" class="form-control form-control-sm" id="tires" name="tires" placeholder="tires">
                    </div>
                    <div class="form-group col-6">
                        <label for="principal">Principal:</label>
                        <input type="text" class="form-control form-control-sm" id="principal" name="principal" placeholder="principal">
                    </div>
                </div>

                <div class="bg-white mt-3 px-3 border border-info rounded">
                    <p class="mt-2">Driver One details</p>
                    <div class="form-row"> 
                        <div class="form-group col-8">
                            <label for="driver1name">Name:</label>
                            <input type="text" class="form-control form-control-sm" id="driver1name" name="driver1.name" placeholder="driver1name">
                        </div>
                        <div class="form-group col-2">
                            <label for="driver1num">Number:</label>
                            <input type="text" class="form-control form-control-sm" id="driver1num" name="driver1.num" placeholder="driver1num">
                        </div>
                        <div class="form-group col-2">
                            <label for="driver1points">Points:</label>
                            <input type="text" class="form-control form-control-sm" id="driver1points" name="driver1.points" placeholder="driver1points">
                        </div>
                    </div>
                </div>

                <div class="bg-white mt-4 px-3 border border-info rounded">
                    <p class="mt-2">Driver Two details</p>
                    <div class="form-row"> 
                        <div class="form-group col-8">
                            <label for="driver2name">Name:</label>
                            <input type="text" class="form-control form-control-sm" id="driver2name" name="driver2.name" placeholder="driver2name">
                        </div>
                        <div class="form-group col-2">
                            <label for="driver2num">Number:</label>
                            <input type="text" class="form-control form-control-sm" id="driver2num" name="driver2.num" placeholder="driver2num">
                        </div>
                        <div class="form-group col-2">
                            <label for="driver2points">Points:</label>
                            <input type="text" class="form-control form-control-sm" id="driver2points" name="driver2.points" placeholder="driver2points">
                        </div>
                    </div>
                </div>
                
    
                <div class="form-group mt-3">
                    <label for="category">Team Category</label>
                    <select class="form-control form-control-sm" name="category" id="category">
                        <% for(let category of categories){ %>
                        <option value="<%=category%>"><%=category%></option>
                        <% } %>
                    </select>
                  </div>
    
                <button class="btn btn-success my-3">Submit</button>

            </form>
    
        </div>

        <a class="my-5" href="/f1teams"><button type="button" class="btn btn-primary m-3">All Teams</button></a>
        <br><br><br><br><br>

    </div>

</div>


<%- include('../partials/footer')%>